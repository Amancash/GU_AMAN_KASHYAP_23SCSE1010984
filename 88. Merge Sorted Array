import java.util.ArrayList;
import java.util.Collections;
class Solution {
    public void merge(int[] arr1, int m, int[] arr2, int n) {
       ArrayList<Integer> list = new ArrayList<>();
        for(int i : arr1){
            if(i==0){
                continue;
            }
            list.add(i);
        }
        for(int i: arr2){
            if(i==0){
                continue;
            }
            list.add(i);
        }
        Collections.sort(list);
        for(int i=0 ; i < list.size();i++){
            arr1[i]= list.get(i);
        }
    }
}
