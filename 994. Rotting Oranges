class Solution {
    public int orangesRotting(int[][] grid) {
        int n = grid.length;
        int m = grid[0].length;
        Queue<int[]> q = new LinkedList<>();
        boolean[][] vis = new boolean[n][m];
        for(int i =0 ; i < n ; i++){
            for(int j=0 ; j< m ;j++){
                if(grid[i][j]==2){
                    q.offer(new int[]{i,j,0});
                    vis[i][j]=true;
                }
                
            }
        }

        int time =0;
        int[] drow ={1,-1,0,0};
        int[] dcol = {0,0,1,-1};
        while(!q.isEmpty()){
            int[] cur = q.poll();
            int r = cur[0];
            int c = cur[1];
            int t = cur[2];
            time = Math.max(time,t);

            for(int i =0 ; i< 4 ; i++){
                int nr = r + drow[i];
                int nc = c + dcol[i];

                if(nr>=0 && nr<n && nc>=0 && nc<m && vis[nr][nc]==false && grid[nr][nc]==1){
                    q.offer(new int[]{nr,nc,t+1});
                    vis[nr][nc]=true;
                }
            }
        }
        for(int i =0 ; i < n ; i++){
            for(int j =0 ; j< m ; j++){
                if(vis[i][j]==false && grid[i][j]==1){
                    return -1;
                }
            }
        }
        return time;
    }
}
